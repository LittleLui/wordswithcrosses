<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/bulk_download_root"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
  <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:id="@+id/fromDateLabel"
              android:text="@string/bulk_download_fromDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dip"
              android:textIsSelectable="false"
              android:textSize="20sp" />
          <TextView
              android:id="@+id/fromDateWeekdayLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dip"
              android:textIsSelectable="false"
              android:textSize="20sp" />
      </LinearLayout>
      
    <DatePicker
        android:id="@+id/fromDatePicker"
        android:padding="5dip"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

          <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content" >
          <TextView
              android:id="@+id/toDateLabel"
              android:text="@string/bulk_download_toDate"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dip"
              android:textIsSelectable="false"
              android:textSize="20sp" />
          <TextView
              android:id="@+id/toDateWeekdayLabel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:paddingLeft="10dip"
              android:textIsSelectable="false"
              android:textSize="20sp" />
      </LinearLayout>
    
    <DatePicker
        android:id="@+id/toDatePicker"
        android:padding="5dip"
        android:layout_gravity="center_horizontal"
        android:calendarViewShown="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <CheckBox
        android:id="@+id/showAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_all"
        android:onClick="onBulkDownloadDialogShowAllClicked" />
    <Spinner
        android:id="@+id/puzzleSelect"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:drawSelectorOnTop="true"
        android:prompt="@string/puzzle_select" />
  </LinearLayout>
</ScrollView>
